<Window x:Class="BinaryConverterGame.EnterNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Your Name" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter your name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,10,0,0"/>
            <Button Content="Submit" Click="SubmitButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
